<!DOCTYPE validators PUBLIC
"-//OpenSymphony Group//XWork Validator 1.0.2//EN"
"http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">
<validators>
  <field name="signon.username">
      <field-validator type="requiredstring">
          <message key="requiredstring"/>
      </field-validator>
  </field>
	<validator type="regex">
		<param name="fieldname">signon.username</param>
		<param name="expression"><![CDATA[\w{4,}]]></param>
		<message key="username.format"/>
	</validator>
  <field name="signon.password">
      <field-validator type="requiredstring">
          <message key="requiredstring"/>
      </field-validator>
  </field>
  <field name="signon.passwordConfirm">
      <field-validator type="requiredstring">
          <message key="requiredstring"/>
      </field-validator>
  </field>
  <field name="account.firstname">
      <field-validator type="requiredstring">
          <message key="requiredstring"/>
      </field-validator>
  </field>
  <field name="account.email">
      <field-validator type="requiredstring">
          <message key="requiredstring"/>
      </field-validator>
  </field>
  <field name="account.email">
      <field-validator type="email">
          <message key="invalid.email"/>
      </field-validator>
  </field>
	<validator type="regex">
		<param name="fieldname">account.phone</param>
		<param name="expression"><![CDATA[\d{2,3}-\d{3,4}-\d{4}]]></param>
		<message key="phone.number.format"/>
	</validator>
	<validator type="regex">
		<param name="fieldname">account.cellphone</param>
		<param name="expression"><![CDATA[\d{2,3}-\d{3,4}-\d{4}]]></param>
		<message key="phone.number.format"/>
	</validator>

